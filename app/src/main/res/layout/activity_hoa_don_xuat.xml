<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundep"
    android:layout_margin="15dp"
    android:gravity="center"
    tools:context="com.example.app_pro.duantwo.AddHoaDonXuatActivity">
    <TextView
        android:layout_width="match_parent"
        android:text="CHI TIẾT XUÁT HÀNG HÓA"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#0d3ce9"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:layout_width="match_parent"
        android:id="@+id/edtMaHDXuat"
        android:hint="Nhập mã hóa đơn xuất"
        android:layout_height="@dimen/kichthuoc" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:text="Chọn mã hàng:"
            android:textSize="20sp"
            android:textColor="#ea0909"
            android:textStyle="bold"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Spinner
            android:layout_weight="6"
            android:layout_width="0dp"
            android:id="@+id/spinnerMaHangXuat"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:layout_width="match_parent"
        android:id="@+id/edtNgayNhapXuat"
        android:hint="Click chọn ngày-tháng-năm"
        android:layout_height="@dimen/kichthuoc" />
    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:layout_width="match_parent"
        android:id="@+id/edtSoLuongXuat"
        android:inputType="number"
        android:hint="Nhập số lượng xuất"
        android:layout_height="@dimen/kichthuoc" />
    <EditText
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:layout_width="match_parent"
        android:id="@+id/edtHDXGhiChu"
        android:hint="Nhập vào ghi chú"
        android:layout_height="@dimen/kichthuoc" />
    <LinearLayout
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="2">

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btnThemXuat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Thêm"
            android:textColor="#241cff"
            android:textSize="30dp"
            android:textStyle="bold"
            app:backgroundColor="#17da14"
            app:corners="0sp"
            app:normalHeight="5dp"
            app:pressedHeight="2dp"
            app:shadowColor="#3c57d9" />

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btnHuyXuat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Hủy"
            android:textColor="#241cff"
            android:textSize="35dp"
            android:textStyle="bold"
            app:backgroundColor="#17da14"
            app:corners="0sp"
            app:normalHeight="5dp"
            app:pressedHeight="2dp"
            app:shadowColor="#3c57d9" />

    </LinearLayout>
</LinearLayout>
