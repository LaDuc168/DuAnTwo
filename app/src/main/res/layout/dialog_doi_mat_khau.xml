<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.example.app_pro.duantwo.activity.DangKi">

    <EditText
        android:background="@drawable/custom_edittext"
        android:inputType="textPassword"
        android:id="@+id/edtMKMoiDialog"
        android:hint="Nhập mật khẩu mới"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kichthuoc" />
    <EditText
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_edittext"
        android:inputType="textPassword"
        android:id="@+id/edtMKMoiLaiDialog"
        android:hint="Nhập lại mật khẩu vừa rồi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kichthuoc" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="2">

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btnDoiMKDialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Ok"
            android:textColor="#241cff"
            android:textSize="30dp"
            android:textStyle="bold"
            app:backgroundColor="#17da14"
            app:corners="0sp"
            app:normalHeight="5dp"
            app:pressedHeight="2dp"
            app:shadowColor="#3c57d9" />

        <ru.katso.livebutton.LiveButton
            android:id="@+id/btnHuyDialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Hủy"
            android:textColor="#241cff"
            android:textSize="35dp"
            android:textStyle="bold"
            app:backgroundColor="#17da14"
            app:corners="0sp"
            app:normalHeight="5dp"
            app:pressedHeight="2dp"
            app:shadowColor="#3c57d9" />

    </LinearLayout>
</LinearLayout>
