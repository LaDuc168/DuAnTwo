<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="15"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="5dp"

        android:layout_weight="12"
        android:layout_width="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtfragmenthhmahang"
            android:layout_width="match_parent"
            android:textSize="@dimen/size_chu"
            android:textColor="#173ae9"
            android:textStyle="bold"
            android:text="Ma hang"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#e7e8e9"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/txtfragmenthhtenhang"
            android:layout_width="match_parent"
            android:textSize="@dimen/size_chu"
            android:textColor="#173ae9"
            android:text="ten hang"
            android:layout_height="wrap_content" />
        <TextView
            android:background="#e7e8e9"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/txtfragmenthhghichu"
            android:layout_width="match_parent"
            android:textSize="@dimen/size_chu"
            android:textColor="#173ae9"
            android:text="Ma hang"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="8"
        android:gravity="center"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnHHSua"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sửa"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:textColor="#f20606"
            android:textStyle="bold"
            android:layout_weight="2"
            android:background="@drawable/custom_edittext"
            android:layout_height="0dp" />
        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btnHHXoa"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Xóa"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:textColor="#f20606"
            android:textStyle="bold"
            android:layout_weight="2"
            android:background="@drawable/custom_edittext"
            android:layout_height="0dp" />

    </LinearLayout>


</LinearLayout>