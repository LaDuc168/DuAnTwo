<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:text="Select folder"
        android:background="@android:color/transparent"
        android:textColor="#102dec"
        android:textStyle="bold"
        android:textSize="22sp"
        android:drawableLeft="@drawable/check_ok"
        android:drawablePadding="10dp"
        android:id="@+id/btnDirect"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
    <View
        android:layout_marginTop="5dp"
        android:background="#dcd8d8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_home" />

        <Button
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/up"
            android:text="Home"
            android:textColor="#f42109"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textSize="22sp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/back_ok"
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="#dcd8d8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:text="Thu muc chon"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#0b0b0b"
        android:id="@+id/folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:background="#dcd8d8"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/dialoglist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#FFF"
        android:dividerHeight="4dp">

    </ListView>

</LinearLayout>